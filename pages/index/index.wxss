/**index.wxss**/
.container{
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.title{
  margin: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 50rpx;
}

.container .row{
  display: flex;
  flex-direction: row;
}

.hr {
  border: 2rpx solid #666666;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
}


.container .row .column{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  color: #666666;
  font-weight: bold;
  background-color: gray;
  display: flex;
  align-items: center;
  justify-content: center;
}
